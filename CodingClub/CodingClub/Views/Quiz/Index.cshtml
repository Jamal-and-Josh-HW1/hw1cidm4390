@using System
@using QuizLibrary
@model QuizProgramMVC.Models.QuizViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Quiz</h2>

<div class="panel panel-default">
    <div class="panel-heading"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Student</div>
    <div class="panel-body">
        <p><span class="label label-info">First Name</span> @Model.SelectedStudent.FirstName</p>
        <p><span class="label label-info">Last Name</span> @Model.SelectedStudent.LastName</p>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading"><span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span> Question</div>
    <!-- this section uses the Bootstrap collapse plugin to show/hide the answer
        http://getbootstrap.com/javascript/#collapse -->
    <div class="panel-body">
        <p><span class="label label-info">Question</span> @Model.SelectedQuestion.QuestionText</p>
        <a class="btn btn-warning" role="button" data-toggle="collapse" data-target="#answerText" aria-expanded="false" aria-controls="answerText">
            Toggle
        </a>
        <div class="collapse" id="answerText">
            <div class="well">
                <span class="label label-info">Answer</span> @Model.SelectedQuestion.AnswerText
                <br />
                <br />
                @using (Html.BeginForm("AnsweredCorrectly", "Quiz", new { Id = Model.SelectedStudent.Id }, FormMethod.Post))
                {
                    <input class="btn btn-success" name="answeredcorrectly" type="submit" value="Correct" />
                    @*
                        <!-- idea for this approach comes from here: http://stackoverflow.com/questions/26174013/asp-net-actionlink-with-glyphicon-and-text-with-different-font
                        <a href="@Url.Action("AnsweredCorrectly", "Quiz")" class="btn btn-success">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                            Correct
                        </a>
                    *@
                    <br />
                    <br />
                }
                @using (Html.BeginForm("AnsweredIncorrectly", "Quiz", new { Id = Model.SelectedStudent.Id }, FormMethod.Post))
                {
                    <input class="btn btn-danger" name="answeredincorrectly" type="submit" value="Wrong" />
                    @*
                        <a href="@Url.Action("AnsweredIncorrectly", "Quiz")" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            Wrong
                        </a>
                    *@
                    <br />
                    <br />
                }

            </div>
        </div>
    </div>
</div>

